 <div class="row-fluid">
       
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                  <h5>Buscar Concierto</h5>                  
                </div>
            
                <div class="widget-content">

                <%= form_tag all_path, :method => 'get' do %>

                	    <div style="padding-left:30px;padding-top:30px">

                      <div style="float:left;padding-top:3px;">
                        Grupo:  
                      </div>
                      <div style="float:left;padding-left:5px;">
                         <%= text_field_tag :search, params[:search] %>
                      </div> 

                      <div style="float:left;padding-top:3px;padding-left:10px;">
                          Local:  
                        </div>
                        <div style="float:left;padding-left:5px;">
                           <%= text_field_tag :local, params[:local] %>
                        </div> 
                        <div style="float:left;padding-top:3px;padding-left:5px;">
                        Fecha:  
                      </div>
                      <div style="float:left;padding-left:5px;">
                          <%= date_select :fecha, 'Fecha' %>  
                      </div>
                        <div style="float:left;padding-top:0px;padding-left:10px;">
                         <%= button_tag( type: 'submit', class: "btn") do %>
                          <i class="icon-search"></i> Buscar
                        <% end %>  
                        
                      </div>

                        <div style="clear:both"></div>
                      </div> 
                <% end %>

                    <div style="padding-top:10px;padding-left:10px">
                    <table class="table table-hover" width="700px">
                         <thead>
                      <tr>
                        <th width="150px">Concierto</th>
                        <th width="100px">Grupo</th>
                        <th width="80px">Fecha</th>    
                        <th width="80px">Inicio</th>
                        <th width="80px">Fin</th>
                        <th width="100px">Local</th>  
                        <th width="100px">Creado</th>                      
                       
                      </tr>
                        </thead>
                    <% if( @concerts.count != 0 ) %>
                    <% @concerts.each do |concert| %>
                      <tr>
                        <td><%= concert.name %></td>
                        <td><%= concert.group.name %></td>
                        <td><%= concert.date.strftime('%d/%m/%Y') %></td>   
                        <td><%= concert.start_time.strftime('%H:%M:%S') %>  
                        <td><%= concert.end_time.strftime('%H:%M:%S') %>
                        <td><%= concert.place.name %></td>
                         <td><%= concert.user.name %></td>

                        
                      </tr>
                    <% end %>
                    <% else %>
                      <tr>
                          <td colspan="9">
                            No hay datos ingrese conciertos
                          </td>
                      </tr>
                    <% end %>
                    </table>

 
  </div>

              </div>
</div>
  
</div>

             
          
         </div>

  </div>